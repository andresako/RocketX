<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="240dp">

    <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_sp"
            android:layout_marginTop="@dimen/base_2_dp"
            android:text="@string/dialog_title"
            android:layout_centerHorizontal="true"
    />

    <TextView
            android:id="@+id/dialogDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_2_dp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:textSize="@dimen/base_sp"
            android:text="@string/dialog_desc"/>

    <Button
            android:id="@+id/dialogBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/base_dp"
            android:layout_centerHorizontal="true"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/dialog_ok_btn"
            android:textSize="@dimen/mid_sp"
            android:textColor="@color/colorPrimary"
    />
</RelativeLayout>